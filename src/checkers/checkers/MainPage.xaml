            <TextBlock Text="Creating by: Clov3rLabs" Style="{StaticResource PhoneTextNormalStyle}" Margin="12,0"/>
        </StackPanel>
        <Border Grid.Row="1" Margin="19,19,19,79" BorderBrush="#ffffff" BorderThickness="5"></Border>

